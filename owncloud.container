[Unit]
Requires=ownclouddb.service owncloudvalkey.service

[Container]
ContainerName=owncloud
Image=docker.io/owncloud/server:latest
PublishPort=8081:8080
Volume=/mnt/disk1/owncloud/data:/mnt/data
AutoUpdate=registry
EnvironmentFile=/mnt/disk1/env/owncloud.env
Network=owncloud.network

[Install]
WantedBy=default.target

[Service]
Restart=always

